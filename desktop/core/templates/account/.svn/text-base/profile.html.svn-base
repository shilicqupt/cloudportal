{% extends "base.html" %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>{{ view_user.username }}'s Profile</h3>
        </div>

        <ul class="nav nav-tabs">
            <li class="active">
                <a href="{% url 'profile' view_user.username  %}">Profile</a>
            </li>
            {% if login_user == view_user %}
                <li><a href="{% url 'credential' user.username  %}">Credential</a></li>
            {% endif %}
        </ul>

        <form id="frmProject" class="form-horizontal" action="{{ action }}" method="post">
            {% csrf_token %}
            {% if login_user == view_user %}
            <fieldset>
                <legend>Basic</legend>
                <div class="control-group">
                    <label class="control-label" >Username</label>
                    <div class="controls">
                        <input name="username" type="text" readonly="readonly" required="required" class="span3" value="{{ view_user.username }}">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >First Name</label>
                    <div class="controls">
                        <input name="first_name" type="text"  class="span3" placeholder="First Name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Last Name</label>
                    <div class="controls">
                        <input name="last_name" type="text"  class="span3" placeholder="Last Name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Email</label>
                    <div class="controls">
                        <input name="email" type="text" class="span3" value="{{ view_user.email }}" placeholder="some@panguso.com">
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Extend</legend>
                <div class="control-group">
                    <label class="control-label" >CN Name</label>
                    <div class="controls">
                        <input name="cn" type="text" required="required" class="span3" placeholder={{ profile.cn_name }}>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Phone NO</label>
                    <div class="controls">
                        <input name="phone" type="text"  class="span3" placeholder={{ profile.phonenum }}>
                    </div>
                </div>
            </fieldset>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            {% else %}
            <fieldset>
                <legend>Basic</legend>
                <div class="control-group">
                    <label class="control-label" >Username</label>
                    <div class="controls">
                        <input name="username" type="text" readonly="readonly" required="required" class="span3" value="{{ view_user.username }}">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >First Name</label>
                    <div class="controls">
                        <input name="first_name" type="text" readonly="readonly" class="span3" placeholder="First Name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Last Name</label>
                    <div class="controls">
                        <input name="last_name" type="text"  readonly="readonly" class="span3" placeholder="Last Name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Email</label>
                    <div class="controls">
                        <input name="email" type="text" class="span3" readonly="readonly" value="{{ view_user.email }}" placeholder="some@panguso.com">
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Extend</legend>
                <div class="control-group">
                    <label class="control-label" >CN Name</label>
                    <div class="controls">
                        <input name="cn" type="text" readonly="readonly" class="span3" placeholder={{ profile.cn_name }}>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >Phone NO</label>
                    <div class="controls">
                        <input name="phone" type="text"  readonly="readonly" class="span3" placeholder={{ profile.phonenum }}>
                    </div>
                </div>
            </fieldset>
            {% endif %}
        </form>


    </div>

{% endblock %}
